<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/item_chat_iv_date"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/chatData"
        android:text="10-12 18:05" />


    <ImageView
        android:layout_alignParentLeft="true"
        android:id="@+id/item_chat_iv_head"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <TextView
        android:layout_alignTop="@id/item_chat_iv_date"
        android:layout_alignLeft="@id/item_chat_iv_head"
        android:layout_gravity="center"
        android:id="@+id/item_chat_iv_content"
        android:layout_width="wrap_content"
        android:text="消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="5dp"
        android:textSize="16dp" />

</RelativeLayout>