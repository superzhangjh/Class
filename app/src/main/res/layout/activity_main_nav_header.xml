<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/main_nav_head"
        android:layout_width="match_parent"
        android:layout_height="160dp">
    </ImageView>

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--手机号-->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <!--<ImageView
                android:layout_marginRight="5dp"
                android:background="@drawable/icon_phone"
                android:layout_gravity="center_vertical"
                android:layout_width="20dp"
                android:layout_height="20dp" />-->
            <TextView
                android:text="手机"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/colorText1"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/main_nav_phoneNum"
                android:gravity="center_vertical"
                android:textColor="@color/colorTextDark1"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:visibility="gone"
                android:gravity="center_vertical"
                android:id="@+id/main_nav_phoneCheck"
                android:layout_gravity="center_vertical"
                android:textColor="#4a4aff"
                android:text="验证"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <!--姓名-->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <!--<ImageView
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_note"
                android:layout_gravity="center_vertical"
                android:layout_width="20dp"
                android:layout_height="20dp" />-->
            <TextView
                android:text="姓名"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/colorText1"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/main_nav_name"
                android:gravity="center_vertical"
                android:textColor="@color/colorTextDark1"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <!--分割线-->
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"/>
        <!--个人主页
        <LinearLayout
            android:id="@+id/main_nav_userinfo"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:text="个人主页"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageView
                android:src="@drawable/next"
                android:gravity="center_vertical"
                android:textColor="@color/colorTextDark1"
                android:textSize="15sp"
                android:layout_width="20dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        &lt;!&ndash;我的班圈&ndash;&gt;
        <LinearLayout
            android:id="@+id/main_nav_groupinfo"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:text="我的班圈"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageView
                android:src="@drawable/next"
                android:gravity="center_vertical"
                android:textColor="@color/colorTextDark1"
                android:textSize="15sp"
                android:layout_width="20dp"
                android:layout_height="match_parent" />
        </LinearLayout>-->
    </LinearLayout>



</LinearLayout>