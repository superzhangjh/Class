<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/item_circle_gallery_iv_head"
            android:background="@mipmap/ic_launcher"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/item_circle_gallery_iv_name"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical|left"
            android:text="名字"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/item_circle_gallery_tv_date"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|right"
            android:text="10月10日 18:00"
            android:textSize="14sp"
            android:layout_width="120dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_circle_gallery_tv_intro"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="这是描述文字描述文字描述文字描述文字描述文字描述文字描述文字描述文字描述文字"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_circle_gallery_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <RelativeLayout
            android:background="#ccc"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="20dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/ic_launcher"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/item_circle_gallery_tv_like"
                    android:text="140"
                    android:gravity="center_vertical|left"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/item_circle_gallery_tv_commend"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="评论" />

    </LinearLayout>
</LinearLayout>