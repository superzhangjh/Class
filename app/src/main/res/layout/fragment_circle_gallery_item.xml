<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ccc"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_circle_gallery_iv_head"
                android:background="@drawable/userinfo_head_background"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/item_circle_gallery_iv_name"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|left"
                android:text="名字"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/item_circle_gallery_tv_date"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical|left"
                android:text="10月10日 18:00"
                android:textSize="10sp"
                android:layout_width="120dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_circle_gallery_tv_intro"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="这是描述文字描述文字描述文字描述文字描述文字描述文字描述文字描述文字描述文字"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/item_circle_gallery_recyclerview"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <RelativeLayout
                android:background="#ccc"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="20dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:background="@mipmap/ic_launcher"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/item_circle_gallery_tv_like"
                        android:text="140"
                        android:gravity="left|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp" />
                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/item_circle_gallery_tv_commend"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="评论" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>

