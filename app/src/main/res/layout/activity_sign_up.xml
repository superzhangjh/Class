<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/sign_up_TIL_userName"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/sign_up_TIL_phoneNum"
        android:layout_marginBottom="50dp"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <EditText
            android:id="@+id/sign_up_edt_userName"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:inputType="number"
            android:hint="学号"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/sign_up_TIL_phoneNum"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/sign_up_TIL_password"
        android:layout_marginBottom="50dp"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <EditText
            android:id="@+id/sign_up_edt_phoneNum"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:inputType="phone"
            android:maxLines="1"
            android:hint="手机号码"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/sign_up_TIL_password"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <EditText
            android:id="@+id/sign_up_edt_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:inputType="numberPassword"
            android:maxLines="1"
            android:hint="密码"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/sign_up_TIL_vf_code"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/sign_up_TIL_password"
        android:layout_marginTop="50dp"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <EditText
            android:id="@+id/sign_up_edt_vf_code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="200dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="200dp"
            android:inputType="number"
            android:maxLines="1"
            android:hint="验证码"/>

    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/sign_up_btn_sign_up"
        android:text="注册"
        android:layout_alignTop="@+id/sign_up_TIL_vf_code"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="110dp"
        android:layout_centerHorizontal="true"
        android:background="#3F6ee9"/>
    <Button
        android:id="@+id/sign_up_btn_get_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/sign_up_TIL_vf_code"
        android:layout_alignEnd="@+id/sign_up_TIL_vf_code"
        android:layout_alignBottom="@+id/sign_up_TIL_vf_code"
        android:layout_marginBottom="15dp"
        android:text="获取验证码"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp"
        android:textColor="@color/colorAccent"/>
</RelativeLayout>