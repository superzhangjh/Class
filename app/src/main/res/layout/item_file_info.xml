<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <!--类型颜色-->
    <android.support.v7.widget.CardView
        android:id="@+id/item_file_type_bg"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="20dp"
        android:layout_width="40dp"
        android:layout_height="40dp">
    <!--类型-->
        <TextView
            android:id="@+id/item_file_type"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

    <LinearLayout
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <!--文件名称-->
    <TextView
        android:id="@+id/item_file_name"
        android:maxLines="1"
        android:forceHasOverlappingRendering="true"
        android:gravity="center_vertical"
        android:textColor="@color/colorTextDark1"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!--路径-->
    <TextView
        android:id="@+id/item_file_type_path"
        android:forceHasOverlappingRendering="true"
        android:gravity="center_vertical"
        android:textColor="@color/colorTextGary"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <!--删除按钮-->
    <ImageView
    android:id="@+id/item_file_type_cross"
    android:layout_gravity="center_vertical"
    android:src="@drawable/icon_error"
    android:layout_width="24dp"
    android:layout_height="24dp" />

    </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
