<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/item_vote_eachIteBg"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/item_vote_eachItem"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CheckBox
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/item_vote_itemContent"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:text="文本文本文本"
                android:textColor="#666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <View
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <android.support.v7.widget.CardView
                android:id="@+id/item_vote_itemCount_bg"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="@color/line"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="20dp">
                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/item_vote_itemCount"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000"
                    android:text="0"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>